@model List<ProductDto>

<div class="spanel-overlay"></div>
<nav aria-label="breadcrumb">
    <ol class="breadcrumb">

        <li class="breadcrumb-item"><a href="#">Ürünler</a></li>
        <li class="breadcrumb-item active" aria-current="page">Tüm Ürünler</li>
    </ol>
</nav> <!-- Breadcrumb end -->
<div class="container-fluid p-4">
    <div class="card rounded-0">
        <div class="card-header">Ürünler</div>
        <div class="card-body">
            <a asp-action="AddProduct" asp-controller="Dashboard" class="btn btn-warning"><i class=" fa fa fa-plus"></i> Yeni Ürün</a>

            <table id="datatable" class="table mb-3 table-responsive-sm">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Görsel</th>
                        <th scope="col">Ürün Adı</th>
                        <th scope="col">Kategori</th>
                        @*<th scope="col">Alt Kategori</th>*@
                        <th scope="col">Durum</th>
                        <th scope="col">Anasayfa</th>
                        <th scope="col">İşlem</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var product in Model)
                    {
                    <tr>
                        <th scope="row">@product.Id</th>
                        <td>
                            <img width="100" height="100" src="@Url.Content(product.Image)" alt="Alternate Text" />
                        </td>
                        <td>@product.Name</td>
                        <td>@product.Category.Name</td>
                        @*<td>@product.Subcategory.Name</td>*@

                        <td>
                            @if (product.Stat == true)
                            {
                                <div class="checkbox-slider--b checkbox-slider-md checkbox-slider-success">
                                    <label>
                                        <input type="checkbox" checked><span>Aktif</span>
                                    </label>
                                </div>
                            }
                            else
                            {
                                <div class="checkbox-slider--b checkbox-slider-md checkbox-slider-danger">
                                    <label>
                                        <input type="checkbox" checked><span>Pasif</span>
                                    </label>
                                </div>
                            }
                        </td>


                        <td>
                            @if (product.Home == true)
                            {
                                <div class="checkbox-slider--b checkbox-slider-md checkbox-slider-success">
                                    <label>
                                        <input type="checkbox" checked><span>Aktif</span>
                                    </label>
                                </div>
                            }
                            else
                            {
                                <div class="checkbox-slider--b checkbox-slider-md checkbox-slider-danger">
                                    <label>
                                        <input type="checkbox" checked><span>Pasif</span>
                                    </label>
                                </div>
                            }
                        </td>



                        <td class="border-top-0 text-right">
                            <a asp-action="UpdateProduct" asp-controller="Dashboard" asp-route-id="@product.Id" class="btn btn-light btn-sm"><i class="far fa-edit mr-2 text-success"></i>Düzenle</a>

                            <a class="btn btn-danger deleteItem btn-sm" href="javascript:void(0);" data-id="@product.Id"><i class="fa fa-times"></i> Sil</a>

                        </td>

                    
                    </tr>
                    }



                </tbody>
            </table>

        </div>
    </div>
</div>

@section Scripts{



    <script>
                $('.deleteItem').click(function(e) {

            e.preventDefault();
            var $ctrl = $(this);
            if (confirm('Silmek istediğinizden Eminmisiniz?')) {
                $.ajax({
                    url: '@Url.Action("RemoveProduct")',
                    type: 'POST',
                    data: { id: $(this).data('id') }
                }).done(function (data) {
                    if (data.Result == "OK") {
                        $ctrl.closest('tr').remove();
                        location.reload();
                    }
                    else if (data.Result.Message) {
                        alert(data.Result.Message);
                    }
                }).fail(function () {
                    alert("Çoklu resimleri silmeliniz. Lütfen tekrar deneyin.");
                })
                location.reload();
            }
        });
    </script>
}