            <!-- 4 Madde -->
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8" data-aos="fade-up">
                <!-- Madde 1 -->
                <div class="text-center">
                    <div class="mb-4 text-blue-500 text-6xl">
