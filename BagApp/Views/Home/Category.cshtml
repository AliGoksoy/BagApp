

<section class="relative w-full h-screen flex items-center justify-center overflow-hidden bg-cover bg-center" style="background-image: url('/images/bg/k1.png');">
    <!-- Gradient Overlay -->
    <div class="absolute inset-0 bg-gradient-to-b from-gray-900 via-transparent to-blue-900"></div>

    <!-- Hero Content -->
    <div class="relative z-10 text-center px-6">
        <h1 class="text-5xl md:text-7xl font-extrabold mb-6 tracking-wide text-yellow-400" data-aos="fade-up">
            Looks Kids
        </h1>
        <div class="w-16 h-1 mx-auto bg-yellow-400 rounded-full mb-4" data-aos="fade-up" data-aos-delay="100"></div>

        <div class="flex justify-center space-x-4" data-aos="fade-up" data-aos-delay="200">

            <a href="#kategoriler" id="scroll-down-link" class="px-6 py-3 bg-blue-500 text-white font-bold rounded-lg shadow-lg hover:scale-105 transform transition">
                <i class="fas fa-chevron-down text-2xl"></i>
            </a>
        </div>
    </div>


    <!-- Scroll Down Indicator -->
 

    <!-- Parallax Background -->
    <div class="absolute inset-0 bg-cover bg-fixed opacity-20" style="background-image: url('~/images/bg/a1.png');"></div>
</section>

<!-- Category Section -->

<section id="kategoriler" class="py-16 bg-gray-100 text-gray-900">
    <div class="container mx-auto px-6">
        <h2 class="text-4xl font-bold text-center mb-8">@ViewData["product"]</h2>
        <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-3 gap-8">
            <!-- Kart -->
            @foreach (CategoryDto item in ViewBag.Category)
            {
                <div class="group relative overflow-hidden rounded-lg shadow-lg bg-white" data-aos="fade-up" data-aos-delay="0" data-aos-duration="800">
                    <img src="@Url.Content(item.Image)" alt="@item.Name" class="w-full h-56 object-cover transition-transform duration-500 group-hover:scale-110">
                    <div class="absolute inset-0 bg-gradient-to-t from-gray-900 via-transparent to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-500"></div>
                    <div class="p-4">
                        <h3 class="text-lg font-bold text-gray-900">@item.Name</h3>
                        @*<p class="text-sm text-gray-600">Klasik ve şık takım elbiseler çocuklarınız için.</p>*@
                    </div>
                    <a asp-action="GetCategoryId" asp-controller="Home" asp-route-category="@Url.FriendlyUrl(item.Name)"
                       class="absolute bottom-4 left-1/2 transform -translate-x-1/2 px-4 py-2 bg-blue-500 text-white font-bold rounded-lg shadow-lg opacity-0 group-hover:opacity-100 transition-opacity duration-500">
                        @ViewData["view"]
                    </a>

                </div>
            }



        </div>
    </div>
</section>
